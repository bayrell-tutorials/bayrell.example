{
	"name": "Example Project",
	"cache": "var/bundler",
	"build":
	[
		{
			"dest": "web/js/runtime.js",
			"lang": "es6",
			"modules":
			[
				"Runtime",
				"Runtime.Core",
				"Runtime.Web"
			],
			"websocket": true
		},
		{
			"dest": "web/js/components.js",
			"lang": "es6",
			"modules":
			[
				"Runtime.Web.Button",
				"Runtime.Web.Dialog",
				"Runtime.Web.Input"
			],
			"websocket": true
		},
		{
			"dest": "web/js/example1.js",
			"lang": "es6",
			"modules":
			[
				"Example1"
			],
			"websocket": true
		},
		{
			"dest": "web/js/example2.js",
			"lang": "es6",
			"modules":
			[
				"Example2"
			],
			"websocket": true
		}
	],
	"modules":
	[
		"lib",
		"src"
	],
	"plugins":
	[
		"Bayrell.Bundler.Plugins.BayLang",
		"Bayrell.Bundler.Plugins.Bundle"
	],
	"plugins_opts":
	{
		"Bayrell.Bundler.Plugins.BayLang":
		{
			"es6":
			{
				"use_module_name": false,
				"use_strict": true,
				"enable_async_await": true,
				"emulate_async_await": false
			},
			"nodejs":
			{
				"use_module_name": true,
				"use_strict": true,
				"enable_async_await": true,
				"emulate_async_await": false
			}
		}
	},
	"languages": ["es6"],
	"watch":
	{
		"dir":
		[
			"lib",
			"src"
		],
		"timeout": 500,
		"websocket": true
	}
}